<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/preview_bottom_bg"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:clickable="true">

    <TextView
        android:id="@+id/preview_bottom_chart_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="贴纸"
        android:textColor="@color/light_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/preview_bottom_chart_confirm_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/preview_bottom_chart_tv"
        app:layout_constraintBottom_toBottomOf="@id/preview_bottom_chart_tv"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="16dp"
        />

    <TextView
        android:id="@+id/preview_bottom_chart_cancel_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/preview_bottom_chart_tv"
        app:layout_constraintBottom_toBottomOf="@id/preview_bottom_chart_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="16dp"
        />

    <com.dogcamera.widget.WrapContentHeightViewPager
        android:id="@+id/preview_bottom_chart_viewpager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/preview_bottom_chart_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="70dp"
        />

    <com.dogcamera.widget.CirclePageIndicator
        android:id="@+id/preview_bottom_chart_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/preview_bottom_chart_viewpager"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="5dp"
        />

    <LinearLayout
        android:id="@+id/preview_bottom_chart_tab"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="visible">

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
